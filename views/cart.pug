extends layout

block content
  h1 My shopping Cart
  //- label(for="travel") FOR HOW MANY HOURS YOU WANT TO TRAVEL:
  //- input#hours(type="text", class="form-control", name="hours")
    


  
  
  - var total=0;
    table.table
      thead
        th Name
        th Price
        th Actions
      tbody
        each item in cart
          - total += Number(item.price)
          tr
            td=item.name
            td=item.price
            td
              a(href="/products/cart/remove/"+item._id, class="btn btn-danger") Remove Item
      tfoot
        tr
          td Your Total will be :
          td=total
