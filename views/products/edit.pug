extends ../layout

block content
    h1 Edit Patient
    form(action="/products/edit/"+product._id,method="post")
        .form-group
            label(for="name") Unique Reference Number
            input#name(type="text", class="form-control", name="name" , value=product.name)
        .form-group
            label(for="description") FIRST NAME
            input#description(type="text", class="form-control", name="description",value=product.description)
        .form-group
            label(for="price") LAST NAME
            input#price(type="text", class="form-control", name="price", value=product.price)
        .form-group
            label(for="status") COVID STATUS
            input#status(type="text", class="form-control", name="status", value=product.status)    

            .form-group
                label(for="category") Partner Name
                <select class="form-control"  name="category" type="text" style={{ margin: "auto", width: "50%", height: "50px", fontSize: "18px" }}>
                <option value="partner 1" style={select}>partner 1</option>
                <option value="partner 2" style={select}>partner 2</option>
                <option value="partner 3" style={select}>partner3</option>
                <option value="partner 4" style={select}>partner 4</option>
                <option value="partner 5" style={select}>partner 5</option>
                <option value="partner 6" style={select}>partner 6</option>
                <option value="partner 7" style={select}>partner 7</option>
                </select>

            input#fileUpload(type="file", required, name="file")
        input(type="submit", class="btn btn-info")
    