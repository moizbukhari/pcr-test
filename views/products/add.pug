extends ../layout

block content
    h1 ADD PATIENT DETAILS
    form(action="/products/add",method="post")
        .form-group
            label(for="name") Unique Reference Number
            input#name(type="text", class="form-control", name="name")
        .form-group
            label(for="description") FIRST NAME
            input#name(type="text", class="form-control", name="description")
        .form-group
            label(for="price") LAST NAME
            input#price(type="text", class="form-control", name="price")

        .form-group
            label(for="status") COVID STATUS
            input#status(type="text", class="form-control", name="status")    
        .form-group
            label(for="Date") Date of Birth
            input#Date(type="date", class="form-control", name="Date")    

        .form-group
            label(for="telephone") TELEPHONE
            input#telephone(type="number", class="form-control", name="telephone")       


            .form-group
            label(for="gender") Gender
             <select class="form-control"  name="gender" type="text" style={{ margin: "auto", width: "50%", height: "50px", fontSize: "18px" }}>
                <option value="Male" style={select}>Male</option>
                <option value="Female" style={select}>Female</option>
            </select>
            .form-group
            label(for="ethnicity") Ethnicity
             <select class="form-control"  name="ethnicity" type="text" style={{ margin: "auto", width: "50%", height: "50px", fontSize: "18px" }}>
                <option value="Asian/Asian british" style={select}>Asian/Asian british</option>
                <option value="African" style={select}>African</option>
                <option value="Chinese" style={select}>Chinese</option>
                <option value="Mixed ethnic groups" style={select}>Mixed ethnic groups</option>
                <option value="Arab" style={select}>Arab</option>
                <option value="White" style={select}>White</option>
                <option value="Not provided" style={select}>Not provided</option>
            </select>

       

            .form-group
                label(for="category") Partner Name
                <select class="form-control"  name="category" type="text" style={{ margin: "auto", width: "50%", height: "50px", fontSize: "18px" }}>
